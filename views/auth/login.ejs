<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/CSS/forms.css">
    <link rel="stylesheet" href="/CSS/auth.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <% if (errorMessage) {%>
                    <div class="user-message user-message--error">
                        <%= errorMessage %>
                    </div>
                    <% } %>
                        <form class="login-form" action="/login" method="POST">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <div class="form-control">
                                <label for="email">E-mail</label>
                                <input class="<%=validationErrors.find(err => err.param==='email') ? 'invalid' : '' %>" type="email" name="email" id="email" value="<%= oldInput.email %>">
                            </div>
                            <div class="form-control">
                                <label for="password">Password</label>
                                <input class="<%=validationErrors.find(err => err.param==='password') ? 'invalid' : '' %>" type="password" name="password" id="password">
                            </div>
                            <button class="btn" type="submit">Login</button>
                        </form>
                        <div class="centered">
                            <a href="/reset" style="color: red;">Reset Password</a>
                        </div>
            </main>
            <%- include('../includes/end.ejs') %>